podTemplate(
    label: 'mypod',
    inheritFrom: 'default',
    containers: [
        containerTemplate(
            name: 'nginx',
            image: 'nginx:1.15-alpine',
            ttyEnabled: true,
            command: 'cat'
        )
    ]
) {
    node('mypod') {
        def commitId
        stage ('Extract') {
                checkout scm
                commitId = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
        }
        stage ('Listar diret√≥rios'){
            container ('nginx') {
                sh 'ls -l'
                echo '${commitId}'
            }
        }
    }
}