podTemplate(
    label: 'mypod',
    inheritFrom: 'default',
    containers: [
        containerTemplate(
            name: 'angular-cli',
            image: 'teracy/angular-cli:1.5.0',
            ttyEnabled: true,
            command: 'cat'
        )
    ]
) {
    node('mypod') {
        def commitId
        stage ('Extract') {
                checkout scm
                commitId = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
        }
        stage ('Test'){
            container ('angular-cli') {
                sh 'ls -l'
                sh 'ng test'
            }
        }
    }
}