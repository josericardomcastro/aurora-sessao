podTemplate(
    label: 'mypod',
    inheritFrom: 'default',
    containers: [
        containerTemplate(
            name: 'nginx',
            image: 'nginx:1.15-alpine',
            ttyEnabled: true,
            command: 'cat'
        )
    ]
) {
    node('mypod') {
         stage ('Listar diret√≥rios'){
            container ('nginx') {
                sh 'ls -l'
            }
        }
    }
}