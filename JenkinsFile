podTemplate(
    label: 'mypod',
    inheritFrom: 'default',
    containers: [
        containerTemplate(
            name: 'angular-cli',
            image: 'teracy/angular-cli:1.5.0',
            ttyEnabled: true,
            command: 'cat'
        )
    ]
) {
    node('mypod') {
        def commitId
        stage ('Git Checkout') {
            checkout scm
            commitId = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
        }
        stage ('Build Dependencies'){
            container ('angular-cli') {
                    sh 'npm install'
                }
            }
        stage ('Build source'){
            container ('angular-cli') {
                sh 'ng build --prod'
                sh 'ls -l'
            }
        }
    }
}